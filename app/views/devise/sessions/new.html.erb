<div class="sign_in-form">
  <h2>Войти</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email" %>
      <%= f.input :password, required: false, label: false, placeholder: "Пароль"%>
      <%= f.input :remember_me, as: :boolean, label: 'Запомнить' %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Войти" %>
    </div>
  <% end %>
  <div class="sign_in-links">
    <%= link_to "Зaрегистрироваться", new_registration_path(resource_name) %>
    <%= link_to "Забыли пароль", new_password_path(resource_name) %>
  </div>
</div>
